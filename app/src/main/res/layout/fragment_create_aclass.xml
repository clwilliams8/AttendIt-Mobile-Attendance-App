<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.colto.attenditdraft3.CreateAClassFragment">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/CreateClassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="84dp"
        android:text="Create Class"
        android:textSize="24sp"
        tools:text="Create Class"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/classNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="21dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/CreateClassTitle"
        app:layout_constraintRight_toRightOf="parent" />

 <TextView
     android:id="@+id/className"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="33dp"
     android:text="Class Name"
     android:textSize="18sp"
     app:layout_constraintHorizontal_bias="0.611"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toLeftOf="@+id/classNameInput"
     app:layout_constraintTop_toBottomOf="@+id/CreateClassTitle" />

 <EditText
     android:id="@+id/dateInput"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginRight="8dp"
     android:layout_marginTop="7dp"
     android:ems="10"
     android:hint="Aug 18th-Dec21st"
     android:inputType="date"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/classNameInput" />

 <TextView
     android:id="@+id/date"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="16dp"
     android:text="Date"
     android:textSize="18sp"
     app:layout_constraintHorizontal_bias="0.453"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toLeftOf="@+id/dateInput"
     app:layout_constraintTop_toBottomOf="@+id/className" />

 <EditText
     android:id="@+id/startTimeInput"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="7dp"
     android:ems="10"
     android:hint="8:00AM"
     android:inputType="time"
     android:layout_marginRight="8dp"
     app:layout_constraintTop_toBottomOf="@+id/dateInput"
     app:layout_constraintRight_toRightOf="parent" />

<TextView
    android:id="@+id/startTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="29dp"
    android:text="Start Time"
    android:textSize="18sp"
    app:layout_constraintHorizontal_bias="0.467"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/startTimeInput"
    app:layout_constraintTop_toBottomOf="@+id/date" />

<EditText
    android:id="@+id/endTimeInput"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="8:50AM"
    android:inputType="time"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/startTimeInput" />

<TextView
    android:id="@+id/endTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="28dp"
    android:text="End Time"
    android:textSize="18sp"
    app:layout_constraintHorizontal_bias="0.457"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/endTimeInput"
    app:layout_constraintTop_toBottomOf="@+id/startTime" />

<EditText
    android:id="@+id/studentLateInput"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="8:15AM"
    android:inputType="time"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/endTimeInput" />

 <TextView
     android:id="@+id/studentLate"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="29dp"
     android:text="Student Late"
     android:textSize="18sp"
     app:layout_constraintHorizontal_bias="0.545"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toLeftOf="@+id/studentLateInput"
     app:layout_constraintTop_toBottomOf="@+id/endTime" />

 <TextView
     android:id="@+id/absentTime"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="34dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="40dp"
     android:text="Absent Time"
     android:textSize="18sp"
     app:layout_constraintHorizontal_bias="0.833"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toLeftOf="@+id/absentTimeInput"
     app:layout_constraintTop_toBottomOf="@+id/studentLate" />

 <EditText
     android:id="@+id/absentTimeInput"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="8:25AM"
     android:inputType="time"
     android:layout_marginRight="8dp"
     android:layout_marginTop="8dp"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/studentLateInput" />

 <EditText
     android:id="@+id/daysOfWeekInput"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="Tuesday, Thursday"
     android:inputType="textPersonName"
     android:layout_marginTop="8dp"
     android:layout_marginRight="8dp"
     app:layout_constraintTop_toBottomOf="@+id/absentTimeInput"
     app:layout_constraintRight_toRightOf="parent" />

 <TextView
     android:id="@+id/daysOfWeek"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginBottom="8dp"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="33dp"
     android:text="Days of Week"
     android:textSize="18sp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintHorizontal_bias="0.485"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toLeftOf="@+id/daysOfWeekInput"
     app:layout_constraintTop_toBottomOf="@+id/absentTime"
     app:layout_constraintVertical_bias="0.0" />

 <TextView
     android:id="@+id/SetLocationTitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginBottom="8dp"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_marginTop="20dp"
     android:text="Set Location"
     android:textSize="24sp"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/daysOfWeekInput" />


</android.support.constraint.ConstraintLayout>

 </ScrollView>
